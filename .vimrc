filetype plugin indent on
syntax on
set number relativenumber
set cursorline
set expandtab
colorscheme molokai
set fillchars+=vert:\ 
let g:airline_powerline_fonts=1
let g:airline_theme='powerlineish'
set encoding=utf-8
set mouse=a

map <C-h> <C-w>h
map <C-j> <C-w>j
map <C-k> <C-w>k
map <C-l> <C-w>l
